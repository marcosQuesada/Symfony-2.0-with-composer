{
    "require": {
        "php":              ">=5.3.2",
        "symfony/symfony":  "2.0.16",        
        "doctrine/orm":     ">=2.1.0,<2.2.0-dev",
        "doctrine/common" : "2.1.4",
        "doctrine/data-fixtures": "dev-master",
        "doctrine/doctrine-fixtures-bundle":    "2.0.1",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-migrations-bundle": "dev-master",
        "stof/doctrine-extensions-bundle": "1.0.x-dev",        
        "twig/extensions":  "dev-master",
        "symfony/twig-bundle":  "2.0.*",

        "symfony/assetic-bundle" : "2.0.x-dev",
        "jms/security-extra-bundle" : "1.0.x-dev",
        "sensio/framework-extra-bundle" : "2.0.x-dev",
        "sensio/distribution-bundle" : "2.0.x-dev",
        "sensio/generator-bundle" : "2.0.x-dev",
        "sensio/distribution-bundle": "2.0.x-dev",

        "behat/behat":  "2.4.*@stable",
        "behat/mink":   "1.4.*@stable",        
        "behat/symfony2-extension":      "*",
        "behat/mink-extension":          "*",
        "behat/mink-browserkit-driver":  "*",
        "behat/mink-selenium2-driver":   "*",
        "behat/mink-sahi-driver":        "*"

    },
    "repositories": {
        "behat/mink-deps": {
            "type": "composer",
            "url":  "behat.org"
        }
    },
    "autoload": {
        "psr-0": {
            "Acme": "src/"
        }
    },

    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink"
    }    
}
